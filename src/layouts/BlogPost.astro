---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, author, tags } = Astro.props;

// Estimate reading time (rough: 200 words/min)
const slotContent = await Astro.slots.render('default');
const wordCount = slotContent.replace(/<[^>]*>/g, '').split(/\s+/).length;
const readingTime = Math.max(1, Math.ceil(wordCount / 200));
---

<html lang="en">
	<head>
		<BaseHead
			title={`${title} — GenAI System Design`}
			description={description}
			article={{
				publishedTime: pubDate.toISOString(),
				author: author || 'Ashish Bhutani',
				tags: tags || [],
			}}
		/>
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1.5em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
				line-height: 1.2;
			}
			.meta {
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 1em;
				margin-bottom: 0.75em;
				color: rgb(var(--gray));
				font-size: 0.9em;
			}
			.meta-divider {
				color: rgb(var(--gray-light));
			}
			.author {
				font-weight: 600;
				color: rgb(var(--gray-dark));
			}
			.tags-list {
				display: flex;
				justify-content: center;
				gap: 0.5em;
				flex-wrap: wrap;
				margin-top: 0.75em;
			}
			.tag {
				background: rgba(var(--gray-light), 0.7);
				color: rgb(var(--gray-dark));
				padding: 0.2em 0.6em;
				border-radius: 4px;
				font-size: 0.8em;
				text-decoration: none;
			}
			.last-updated-on {
				font-style: italic;
				font-size: 0.85em;
			}
			.back-link {
				display: inline-block;
				margin-top: 3em;
				padding-top: 1.5em;
				border-top: 1px solid rgb(var(--gray-light));
				font-weight: 600;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <Image width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="meta">
							<span class="author">{author || 'Ashish Bhutani'}</span>
							<span class="meta-divider">·</span>
							<FormattedDate date={pubDate} />
							<span class="meta-divider">·</span>
							<span>{readingTime} min read</span>
						</div>
						{
							updatedDate && (
								<div class="last-updated-on">
									Last updated on <FormattedDate date={updatedDate} />
								</div>
							)
						}
						<h1>{title}</h1>
						{tags && tags.length > 0 && (
							<div class="tags-list">
								{tags.map((tag) => (
									<span class="tag">{tag}</span>
								))}
							</div>
						)}
					</div>
					<slot />
					<a href="/blog" class="back-link">← Back to all posts</a>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
